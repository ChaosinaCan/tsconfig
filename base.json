{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2017",
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "incremental": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    }
}
